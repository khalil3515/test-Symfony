{% extends 'base.html.twig' %}

{% block title %}Garden List!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Garden List</h1>
    {#
        {{ dump(gardens) }}
    #}
    <a href="{{ path('app_garden_create') }}">Add Garden</a>
    
    {% for garden in gardens %}
        <div>
            <p><b>Name : </b> {{ garden.name }} </p>
            <p><b>Location : </b> {{ garden.location }} </p>
            <p><b>Status : </b> {{ garden.status ? 'Open' : 'Closed' }} </p>
            <p><b>Visit Date : </b> {{ garden.visitDate | date('d-m-Y') }} </p>
            <a href="{{path('app_garden_details',{id: garden.id})}}">Details</a>
            <a href="{{path('app_garden_update',{id: garden.id})}}">Update</a>
            <a href="{{path('app_garden_delete',{id: garden.id})}}">Delete</a>
            <hr>
        </div>
    {% endfor %}
    <div>
        <p><b>Number of Gardens : </b> {{ gardens | length }} </p>
    </div>
</div>
{% endblock %}